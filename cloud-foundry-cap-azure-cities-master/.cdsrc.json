{
    "requires": {
        "db": {
            "kind": "sqlite",
            "model": [
                "db",
                "srv"
            ],
            "credentials": {
                "database": "cities.db"
            },
            "[production]": {
                "kind": "hana"
            }
        }
    },
    "odata": {
        "version": "v4"
    },
    "build": {
        "target": ".",
        "tasks": [
            {
                "for": "node-cf",
                "src": "srv",
                "options": {
                    "model": [
                        "srv",
                        "db"
                    ]
                }
            },
            {
                "for": "hana",
                "src": "db",
                "options": {
                    "model": [
                        "db",
                        "srv"
                    ]
                }
            }
        ]
    }
}