{
    "xsappname": "capapp",
    "tenant-mode": "dedicated",
    "description": "Security profile of called application",
    "scopes": [
        {
            "name": "uaa.user",
            "description": "UAA"
        },
        {
            "name": "$XSAPPNAME.Rank",
            "description": "Rank of person based on IDP"
        }
    ],
    "attributes": [
        {
            "name": "Rank",
            "description": "Rank",
            "valueType": "string"
        },
        {
            "name": "Faculty",
            "description": "Faculty",
            "valueType": "string"
        },
        {
            "name": "Course",
            "description": "Course",
            "valueType": "string"
        }
    ],
    "role-templates": [
        {
            "name": "Token_Exchange",
            "description": "UAA",
            "scope-references": [
                "uaa.user"
            ]
        },
        {
            "name": "Rank",
            "description": "Rank of person based on IDP",
            "scope-references": [
                "$XSAPPNAME.Rank"
            ],
            "attribute-references": [
                {
                    "name": "Rank"
                },
                {
                    "name": "Faculty"
                },
                {
                    "name": "Course"
                }
            ]
        }
    ],
    "oauth2-configuration": {
        "redirect-uris": [
            "https://*.applicationstudio.cloud.sap/**",
            "https://*.cfapps.eu10.hana.ondemand.com/**"
        ]
    }
}